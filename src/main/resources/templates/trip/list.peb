{% import "widget/box" %}

{% extends "layout" %}

{% block title %}Trips{% endblock %}

{% block content %}

    {% if trips|length == 0 %}
        <h2 style="text-align: center">No trips</h2>
    {% else %}
        <div class="box-container">
            {% for trip in trips %}
                {{ box(trip) }}
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}