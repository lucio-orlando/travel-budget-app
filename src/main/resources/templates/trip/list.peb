{% import "widget/trip-card" %}

{% extends "layout" %}

{% block title %}Trips{% endblock %}

{% block content %}

    {% if trips|length == 0 %}
        <h2 style="text-align: center">No trips</h2>
    {% else %}
        <div class="trip-container">
            {% for trip in trips %}
                {{ tripCard(trip) }}
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}